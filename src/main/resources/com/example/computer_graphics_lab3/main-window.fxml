<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>

<?import javafx.scene.canvas.Canvas?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.computer_graphics_lab3.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <HBox>
        <Button text="bresenham" onAction="#OnBresenhamButton"/>
        <Button text="step-by-step" onAction="#OnStepByStepButton"/>
        <Label>x1</Label>
        <TextField maxWidth="100" fx:id="x1Field"/>
        <Label>y1</Label>
        <TextField maxWidth="100" fx:id="y1Field"/>
        <Label>x2</Label>
        <TextField maxWidth="100" fx:id="x2Field"/>
        <Label>y2</Label>
        <TextField maxWidth="100" fx:id="y2Field"/>
    </HBox>
    <Canvas height="500" width="500" fx:id="canvas"/>
    <TextArea editable="false" fx:id="resultTextArea"/>
</VBox>
